@page
@using BulkyWebRazor_Temp.Models
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel

<div class="container ">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>

        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary">
                Create new category <i class="bi bi-clipboard2-plus"></i>
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (Category category in Model.CategoryList.OrderBy(u => u.DisplayOrder))
                {
                    <tr>
                        <td>
                            @category.Name
                        </td>
                        <td>
                            @category.DisplayOrder
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-page="/Categories/Edit" asp-route-Id="@category.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-page="/Categories/Delete" asp-route-Id="@category.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>